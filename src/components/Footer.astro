---
import { SITE_NAME, SITE_DESCRIPTION, TEAM_NAME } from '../consts';
---

<footer class="footer">
  <div class="container">
    <div class="footer__inner">
      <div class="footer__brand">
        <a href="/" class="footer__logo">
          <img src="/images/logo-light.png" alt={SITE_NAME} width="28" height="28" />
          {SITE_NAME}
        </a>
        <p class="footer__tagline">{SITE_DESCRIPTION}</p>
      </div>
      <div class="footer__links">
        <div class="footer__col">
          <h4>Product</h4>
          <a href="/#features">Features</a>
          <a href="/#how-it-works">How It Works</a>
          <a href="/pricing/">Pricing</a>
          <a href="/blog/">Blog</a>
        </div>
        <div class="footer__col">
          <h4>Legal</h4>
          <a href="/terms/">Terms of Service</a>
          <a href="/privacy/">Privacy Policy</a>
        </div>
      </div>
    </div>
    <div class="footer__bottom">
      <p>&copy; {new Date().getFullYear()} {TEAM_NAME}. All rights reserved.</p>
    </div>
  </div>
</footer>
