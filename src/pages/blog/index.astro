---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { SITE_NAME } from '../../consts';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout
  title={`Blog â€” ${SITE_NAME}`}
  description={`Tips, strategies, and updates from the ${SITE_NAME} team to help you master vocabulary.`}
  canonicalPath="/blog/"
  currentPage="blog"
>
  <section class="blog-listing">
    <div class="container">
      <div class="blog-listing__header">
        <h1>Blog</h1>
        <p>Tips, strategies, and updates to help you master vocabulary like never before.</p>
      </div>
      <div class="blog-listing__grid">
        {posts.map((post) => {
          const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          });
          return (
            <a href={`/blog/${post.id}/`} class="blog-card fade-in">
              <div class="blog-card__content">
                <time datetime={post.data.pubDate.toISOString()}>{formattedDate}</time>
                <h2>{post.data.title}</h2>
                <p>{post.data.description}</p>
                {post.data.tags.length > 0 && (
                  <div class="blog-card__tags">
                    {post.data.tags.map((tag) => (
                      <span class="blog-card__tag">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </section>
</BaseLayout>
